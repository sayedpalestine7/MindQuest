JAVASCRIPT ARCHITECTURE (MANDATORY STRUCTURE):
===============================================================================

```javascript
// 1. Data Structure Class
class [DataStructure] {
    constructor() {
        // Initialize data
    }
    
    insert(value) {
        // Logic here
    }
    
    delete(value) {
        // Logic here
    }
    
    search(value) {
        // Logic here
    }
}

// 2. Visualization Class
class Visualizer {
    constructor(containerId) {
        this.container = document.getElementById(containerId);
        this.animationQueue = new AnimationQueue();
    }
    
    drawElement(data, position) {
        // Create DOM element
        // Position it
        // Return reference
    }
    
    async animateInsert(element, fromPos, toPos) {
        // Add to animation queue
    }
    
    updateDisplay() {
        // Redraw entire visualization
    }
    
    clear() {
        // Remove all elements
    }
}

// 3. Global State
let dataStructure = new [DataStructure]();
let visualizer = new Visualizer('visualization');
let stepCount = 0;
let isPlaying = false;

// 4. Event Handlers
function handleInsert() {
    const value = parseInt(document.getElementById('valueInput').value);
    if (isNaN(value) || value < 1 || value > 100) {
        showError("Please enter a number between 1 and 100");
        return;
    }
    
    dataStructure.insert(value);
    visualizer.animateInsert(value);
    updateStats();
    updateExplanation(`Inserted ${value}`);
}

function handleReset() {
    if (!confirm("Are you sure you want to reset?")) return;
    
    dataStructure = new [DataStructure]();
    visualizer.clear();
    stepCount = 0;
    updateStats();
    updateExplanation("Reset complete. Ready for new operations.");
}

// 5. Event Listeners (NO INLINE HANDLERS)
document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('insertBtn').addEventListener('click', handleInsert);
    document.getElementById('resetBtn').addEventListener('click', handleReset);
    document.getElementById('searchBtn').addEventListener('click', handleSearch);
    document.getElementById('playBtn').addEventListener('click', togglePlay);
    document.getElementById('speedSlider').addEventListener('input', handleSpeedChange);
    
    // Enter key support
    document.getElementById('valueInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') handleInsert();
    });
});

// 6. Helper Functions
function updateStats() {
    document.getElementById('stepCount').textContent = stepCount;
    document.getElementById('opCount').textContent = dataStructure.size();
}

function updateExplanation(text) {
    const explanationText = document.getElementById('explanationText');
    explanationText.style.opacity = '0';
    setTimeout(() => {
        explanationText.textContent = text;
        explanationText.style.opacity = '1';
    }, 150);
}

function showError(message) {
    const input = document.getElementById('valueInput');
    input.style.borderColor = '#F44336';
    updateExplanation('❌ ' + message);
    setTimeout(() => {
        input.style.borderColor = '';
    }, 2000);
}

async function delay(ms) {
    return new Promise(resolve => setTimeout(resolve, ms));
}
```

